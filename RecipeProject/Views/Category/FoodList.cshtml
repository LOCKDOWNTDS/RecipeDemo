@model Category
@{
}
<head>
    <link href="~/css/HomeAndFoodList.css" type="text/css" rel="stylesheet" />

</head>
<div class="container-fluit">
    <div class="col-md-12">
        <div class="row "style="margin-top:10px;">
              @foreach (var item in Model.Foods)
            {
                <div class="col-sm-12  col-lg-4 col-md-6 ">
                    <div class="card rounded-lg" style="width: 100%;">
                        <div id="carouselExampleControls_@item.Food.ID" class="carousel slide">
                            <div class="carousel-inner">
                                @for (var j = 0; j < item.Food.OtherPictures.Count; j++)
                                {
                                    var picture = item.Food.OtherPictures[j];
                                    var photoPath = picture.PhotoPath.Replace("~", "");
                                    <div class="carousel-item @(j == 0 ? "active" : "")">
                                        <img src="@photoPath" class="d-block w-100" alt="...">
                                    </div>
                                }
                            </div>
                            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls_@item.Food.ID" data-bs-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Previous</span>
                            </button>
                            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls_@item.Food.ID" data-bs-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Next</span>
                            </button>
                        </div>
                        <div class="card-body d-flex flex-column justify-content-center text-center">
                            <h5 class="card-title">@item.Food.Name</h5>
                            <p class="card-text">
                                <i class="fa-solid fa-utensils"></i> @item.Food.PreparationTime
                                <i class="fa-solid fa-kitchen-set"></i> @item.Food.CookingTime
                                <i class="fa-solid fa-person"></i> @item.Food.HowManyPerson
                            </p>
                            <a asp-controller="Detail" asp-route-id="@item.Food.ID" asp-action="FromCategoryToDetail" class="btn btn-primary " style="margin-bottom:-9px;">Detay</a>
                        </div>
                    </div>
                </div>
            }  
        </div>
</div>



